{
  "name": "Paragraph color changer",
  "version": "1.0",
  "description": "Changes the background color of all the paragraphs given a hex value entered by the user",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "./index.html",
    "default_title": "Open the popup",
    "default_icon":"./icon16.png"
  },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ]
}